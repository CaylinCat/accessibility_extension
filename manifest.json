{
  "manifest_version": 3,
  "name": "A11y Scanner Extension",
  "version": "1.0.0",
  "description": "Quick access to accessibility scanner admin interface",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://a11y-scanner-admin.sgw.prod.atl-paas.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "A11y Scanner",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://a11y-scanner-admin.sgw.prod.atl-paas.net/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 